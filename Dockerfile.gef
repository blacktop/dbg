FROM ubuntu:xenial

LABEL maintainer "https://github.com/blacktop"

ENV TERM screen-256color
ENV GDB_VERSION 7.11.1-0ubuntu1~16.5

RUN buildDeps='ca-certificates git build-essential wget cmake pkg-config python-pip' \
  && dpkg --add-architecture i386 \
  && apt-get update \
  && apt-get install -yq $buildDeps \
                         sudo \
                         ltrace \
                         strace \
                         python \
                         binutils \
                         libc6:i386 \
                         libstdc++6:i386 \
                         gdb=$GDB_VERSION \
                         gdb-multiarch=$GDB_VERSION \
  && export PIP_NO_CACHE_DIR=off \
  && export PIP_DISABLE_PIP_VERSION_CHECK=on \
  && pip install --upgrade pip wheel \
  && pip install ropgadget ropper capstone keystone-engine \
  && echo "===> Adding gef user..." \
  && useradd -ms /bin/bash gef \
  && echo "===> Install GEF..." \
  && wget -q -O /src/gdbinit-gef.py https://github.com/hugsy/gef/raw/master/gef.py \
  && chmod o+r /src/gdbinit-gef.py \
  && echo "===> Clean up unnecessary files..." \
  && apt-get purge -y --auto-remove $buildDeps \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/* /tmp/*

USER gef

RUN echo "source /src/gdbinit-gef.py" > /home/gef/.gdbinit

ENTRYPOINT ["bash"]
